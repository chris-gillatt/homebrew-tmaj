class Tmaj < Formula
  desc "Prints a random joke on the command-line"
  homepage "https://github.com/chris-gillatt/homebrew-tmaj"
  url "https://github.com/chris-gillatt/homebrew-tmaj/releases/download/0.0.<%= ENV["RELEASE_COUNT"] %>/tmaj-0.0.<%= ENV["RELEASE_COUNT"] %>.tar.gz"
  sha256 "<%= `sha256sum dist/tmaj-0.0.#{ENV["RELEASE_COUNT"]}.tar.gz | awk '{printf $1}'` %>"
  version "0.0.<%= ENV["RELEASE_COUNT"] %>"

  depends_on ["curl", "figlet", "cowsay", "lolcat", "coreutils"]

  def install
    bin.install "tmaj"
  end
end