class Tmaj < Formula
  desc "Tell me a Joke on the command-line"
  homepage "https://github.com/chris-gillatt/tmaj"
  url "https://github.com/chris-gillatt/tmaj/releases/download/0.1.<%= ENV["RELEASE_COUNT"] %>/tmaj-0.0.<%= ENV["RELEASE_COUNT"] %>.tar.gz"
  sha256 "<%= `sha256sum tars/tmaj-0.0.#{ENV["RELEASE_COUNT"]}.tar.gz | awk '{printf $1}'` %>"
  version "0.1.<%= ENV["RELEASE_COUNT"] %>"

  depends_on ["curl", "figlet", "cowsay", "lolcat"]

  def install
    bin.install "tmaj"
  end
end
